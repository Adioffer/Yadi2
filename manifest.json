{
    "name": "Yadi2 - New Listings Finder",
    "action": {},
    "manifest_version": 3,
    "version": "0.2",
    "description": "Marks new Yad2 listings",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.yad2.co.il/*"
            ],
            "js": ["main.js"]
        }
    ]
}